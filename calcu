      width: 260px;
    }
    .display {
      width: 100%;
      height: 40px;
      margin-bottom: 16px;
      font-size: 1.5em;
      text-align: right;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 6px;
      background: #f9f9f9;
      box-sizing: border-box;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }
    button {
      padding: 12px;
      font-size: 1em;
      border: none;
      border-radius: 6px;
      background: #ececec;
      cursor: pointer;
      transition: background 0.2s;
